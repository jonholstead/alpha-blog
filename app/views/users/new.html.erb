<h1>Sign up for Alpha Blog</h1>

<% if @user.errors.any? %>
  <h3>The following errors prevented the aricle from getting created</h3>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
  <p>
    <%= f.label :username %>
    <br/>
    <%= f.text_field :username, placeholder: "Enter username" %>
  </p>
  <p>
    <%= f.label :email %>
    <br/>
    <%= f.email_field :email, placeholder: "Enter email address" %>
  </p>
  <p>
    <%= f.label :password %>
    <br/>
    <%= f.password_field :password, placeholder: "Enter password" %>
  </p>
  <p>
    <%= f.submit "Sign up" %>
  </p>
<% end %>